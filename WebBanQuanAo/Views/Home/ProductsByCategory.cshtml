<style>
   .section-header {
        margin-bottom: 40px;
        position: relative;
    }

        .section-header h2 {
            font-size: 32px;
            font-weight: 600;
            color: var(--secondary-color);
            margin-bottom: 15px;
        }

    .section-divider {
        width: 80px;
        height: 3px;
        background: var(--primary-color);
        margin: 0 auto;
        position: relative;
    }

        .section-divider::before,
        .section-divider::after {
            content: '';
            position: absolute;
            width: 40px;
            height: 3px;
            background: var(--secondary-color);
            top: 0;
        }

        .section-divider::before {
            left: -50px;
        }

        .section-divider::after {
            right: -50px;
        }

    .banner-container {
        max-width: 100%;
        overflow: hidden;
    }

    .carousel-item img {
        object-fit: cover;
        height: 400px;
    }



    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        padding: 15px;
    }

        .carousel-caption .btn {
            margin-top: 10px;
            background-color: #ff6b6b;
            border: none;
            padding: 8px 20px;
            transition: all 0.3s;
        }

            .carousel-caption .btn:hover {
                background-color: #ff5252;
                transform: translateY(-2px);
            }
    /* Product Card */
    .product-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

    /* Product Image */
    .product-image-wrapper {
        position: relative;
        padding-top: 125%; /* 4:5 Aspect Ratio */
        overflow: hidden;
    }

    .product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    /* Product Overlay */
    .product-overlay {
        position: absolute;
        bottom: -100%;
        left: 0;
        width: 100%;
        padding: 15px;
        background: rgba(255, 255, 255, 0.95);
        transition: bottom 0.3s ease;
    }

    .product-card:hover .product-overlay {
        bottom: 0;
    }

    .product-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    /* Buttons */
    .btn-add-cart,
    .btn-quickview {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 15px;
        border-radius: 5px;
        border: none;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        gap: 8px;
    }

    .btn-add-cart {
        background: var(--primary-color);
        color: white;
    }

        .btn-add-cart:hover {
            background: var(--secondary-color);
        }

    .btn-quickview {
        background: var(--secondary-color);
        color: white;
    }

        .btn-quickview:hover {
            background: var(--primary-color);
        }

    /* Product Info */
    .product-info {
        padding: 20px;
    }

    .product-title {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 10px;
        line-height: 1.4;
    }

        .product-title a {
            color: var(--secondary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .product-title a:hover {
                color: var(--primary-color);
            }

    .product-price {
        font-size: 18px;
        font-weight: 600;
        color: var(--primary-color);
    }

    /* Badge for new or sale products */
    .product-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 5px 10px;
        border-radius: 3px;
        font-size: 12px;
        font-weight: 500;
        z-index: 1;
    }

    .badge-new {
        background: var(--primary-color);
        color: white;
    }

    .badge-sale {
        background: #ff4a4a;
        color: white;
    }

</style>
<div class="container">
    <div class="section-header">
        <h2 class="text-center">Sản Phẩm Theo Danh Mục</h2>
        <div class="section-divider"></div>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3 g-md-4">
        @foreach (var product in Model)
        {
                <div class="col">
                    <div class="product-card">
                        <div class="product-image-wrapper">
                        @if (product.IsNew)
                        {
                                    <div class="product-badge badge-new">Mới</div>
                        }

                        @if (product.IsTrend)
                        {
                                    <div class="product-badge badge-sale">Giảm giá</div>
                        }

                            <a href="@Url.Action("Details", "Home", new { id = product.ProductId })">
                                <img src="@product.imgurl" class="product-image" alt="@product.Name">
                            </a>
                            <div class="product-overlay">
                                <div class="product-actions">
                                    <form asp-action="AddToCart" asp-controller="Home" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="btn-add-cart">
                                            <i class="fas fa-shopping-cart"></i>
                                            <span class="btn-text">Thêm vào giỏ</span>
                                        </button>
                                    </form>
                                    <a href="@Url.Action("Details", "Home", new { id = product.ProductId })" class="btn-quickview">
                                        <i class="fas fa-eye"></i>
                                        <span class="btn-text">Xem nhanh</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="product-info">
                            <h3 class="product-title">
                                <a href="@Url.Action("Details", "Home", new { id = product.ProductId })">@product.Name</a>
                            </h3>
                            <div class="product-price">
                            @product.Price.ToString("N0") VND
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
