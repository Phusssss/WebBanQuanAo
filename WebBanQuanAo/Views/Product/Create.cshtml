@model WebBanQuanAo.Models.Product

<div class="create-product-container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4" style="color: var(--secondary-color); font-weight: 600; font-size: 24px;">
                Thêm sản phẩm mới
            </h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label fw-500">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control custom-input" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Price" class="form-label fw-500">Giá</label>
                            <input asp-for="Price" class="form-control custom-input" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-group">
                        <label asp-for="Description" class="form-label fw-500">Mô tả</label>
                        <textarea asp-for="Description" class="form-control custom-input" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Stock" class="form-label fw-500">Số lượng tồn kho</label>
                            <input asp-for="Stock" class="form-control custom-input" type="number" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label fw-500">Danh mục</label>
                            <select asp-for="CategoryId"
                                    asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))"
                                    class="form-control custom-input">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="imgurl" class="form-label fw-500">URL Hình ảnh chính</label>
                            <input asp-for="imgurl" class="form-control custom-input" />
                            <span asp-validation-for="imgurl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="ListImg" class="form-label fw-500">URL Hình ảnh khác</label>
                            <textarea id="ListImg" name="ListImg" class="form-control custom-input"
                                      placeholder="Nhập các URL hình ảnh, cách nhau bằng dấu phẩy"></textarea>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-check custom-checkbox">
                            <input type="checkbox" asp-for="IsNew" class="form-check-input" />
                            <label class="form-check-label fw-500" for="IsNew">Sản phẩm mới</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check custom-checkbox">
                            <input type="checkbox" asp-for="IsTrend" class="form-check-input" />
                            <label class="form-check-label fw-500" for="IsTrend">Sản phẩm thịnh hành</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-custom">Thêm sản phẩm</button>
                    <a asp-action="Index" class="btn btn-outline-custom">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .create-product-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .fw-500 {
        font-weight: 500;
    }

    .custom-input {
        padding: 12px;
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

        .custom-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(255, 77, 109, 0.25);
        }

    .custom-checkbox .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(255, 77, 109, 0.25);
    }

    .alert {
        border-radius: 5px;
    }

    .gap-2 {
        gap: 0.5rem !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}