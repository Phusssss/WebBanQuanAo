@model WebBanQuanAo.Models.Product

<div class="product-details-container">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 style="color: var(--secondary-color); font-weight: 600; font-size: 28px;">Chi tiết sản phẩm</h1>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-custom">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.imgurl))
                    {
                        <img src="@Model.imgurl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 400px; width: 100%; object-fit: cover;" />
                    }
                </div>

                <div class="col-md-6">
                    <div class="product-info">
                        <div class="info-group mb-3">
                            <label class="info-label">Tên sản phẩm</label>
                            <div class="info-value">@Model.Name</div>
                        </div>

                        <div class="info-group mb-3">
                            <label class="info-label">Giá</label>
                            <div class="info-value" style="color: var(--primary-color); font-size: 24px; font-weight: 600;">
                                @Model.Price.ToString("N0")₫
                            </div>
                        </div>

                        <div class="info-group mb-3">
                            <label class="info-label">Loại sản phẩm</label>
                            <div class="info-value">@Model.Category?.Name</div>
                        </div>

                        <div class="info-group mb-3">
                            <label class="info-label">Số lượng tồn kho</label>
                            <div class="info-value">@Model.Stock</div>
                        </div>

                        <div class="info-group">
                            <label class="info-label">Mô tả sản phẩm</label>
                            <div class="info-value description">@Model.Description</div>
                        </div>

                        @if (Model.IsNew || Model.IsTrend)
                        {
                            <div class="product-tags mt-3">
                                @if (Model.IsNew)
                                {
                                    <span class="badge bg-primary">Mới</span>
                                }
                                @if (Model.IsTrend)
                                {
                                    <span class="badge" style="background-color: var(--primary-color);">Thịnh hành</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-details-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .info-group {
        margin-bottom: 1rem;
    }

    .info-label {
        color: var(--secondary-color);
        font-weight: 500;
        font-size: 14px;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
        display: block;
    }

    .info-value {
        color: var(--secondary-color);
        font-size: 16px;
    }

    .description {
        line-height: 1.6;
        white-space: pre-line;
    }

    .product-tags .badge {
        padding: 8px 12px;
        margin-right: 8px;
        font-weight: 500;
    }

  
</style>