@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center my-4" style="color: var(--secondary-color); font-weight: 600;">Quản Lý Hệ Thống</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="row g-4">
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Product")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 admin-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-4">
                                <div class="icon-circle mb-3 d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box-seam fs-3"></i>
                                </div>
                                <h4 class="card-title text-center mb-2">Quản lý sản phẩm</h4>
                                <p class="card-text text-center text-muted small">Thêm, sửa, xóa sản phẩm trong cửa hàng</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Order")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 admin-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-4">
                                <div class="icon-circle mb-3 d-flex align-items-center justify-content-center">
                                    <i class="bi bi-receipt fs-3"></i>
                                </div>
                                <h4 class="card-title text-center mb-2">Quản lý hóa đơn</h4>
                                <p class="card-text text-center text-muted small">Xem và xử lý các đơn hàng của khách hàng</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Category")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 admin-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-4">
                                <div class="icon-circle mb-3 d-flex align-items-center justify-content-center">
                                    <i class="bi bi-tag fs-3"></i>
                                </div>
                                <h4 class="card-title text-center mb-2">Quản lý danh mục</h4>
                                <p class="card-text text-center text-muted small">Quản lý các danh mục sản phẩm</p>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-6">
                    <a href="@Url.Action("Index", "ListAccount")" class="text-decoration-none">
                        <div class="card shadow-sm h-100 admin-card">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-4">
                                <div class="icon-circle mb-3 d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people fs-3"></i>
                                </div>
                                <h4 class="card-title text-center mb-2">Quản lý tài khoản</h4>
                                <p class="card-text text-center text-muted small">Quản lý tài khoản người dùng</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-card {
        transition: transform 0.3s, box-shadow 0.3s;
        color: var(--secondary-color);
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            color: var(--primary-color);
        }

    .icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background-color: var(--light-bg);
        color: var(--primary-color);
        transition: background-color 0.3s, color 0.3s;
    }

    .admin-card:hover .icon-circle {
        background-color: var(--primary-color);
        color: var(--white);
    }
</style>

<!-- Add Bootstrap Icons if not already included in your layout -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">